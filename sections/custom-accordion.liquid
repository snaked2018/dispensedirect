
    <div class="custom-container">
        <div class="custom-details">
          {% for block in section.blocks %}
            <div class="custom-details-item" data-image="{{ block.settings.image_url | img_url: 'master' }}">
              <div></div>
              <div class="custom-details-item-details">
                <h3 style="color: {{ block.settings.color }};">{{ block.settings.title }}</h3>
              {{ block.settings.description }}
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="custom-image-container">
          <img 
            src="{{ section.blocks[0].settings.image_url | img_url: 'master' }}" 
            alt="Default Image" 
            id="dynamic-image">
        </div>
      </div>
      
      <style>
        * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }

        .custom-details-item * {
          margin: 0
        }

        .custom-details-item-details p a {
          color: #1A82C4;
          text-decoration: underline;
        }

        .custom-details-item-details h3 {
          font-weight: 700;
        }
      
        body {
          font-family: Arial, sans-serif;
          display: flex;
          justify-content: center;
          align-items: center;
          min-height: 100vh;
          background-color: #f4f4f4;
        }
      
        .custom-container {
          display: flex;
          gap: 20px;
          width: 90%;
          max-width: 1200px;
          margin: auto;
          overflow: hidden;
        }
      
        .custom-details {
          flex: 1;
          display: flex;
          flex-direction: column;
          justify-content: center;
          gap: 20px;
        }
      
        .custom-details-item {
          padding: 15px;
          border: 1px solid #ddd;
          border-radius: 5px;
          background-color: #fff;
          cursor: pointer;
          transition: background-color 0.3s;
        }
      
        .custom-details-item:hover {
          background-color: #f0f8ff;
        }
      
        .custom-image-container {
          flex: 1;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 700px;
          transition: all 0.3s;
        }
      
        .custom-image-container img {
          max-width: 100%;
          height: auto;
          border-radius: 5px;
          opacity: 0;
          transition: opacity 0.3s ease-in-out;
        }
      
        /* Mobile Styles */
        @media screen and (max-width: 768px) {
          .custom-container {
            flex-direction: column;
            margin: auto;
          }
      
          .custom-image-container {
            order: 2;
            margin-top: 20px;
          }
        }
      </style>

{% schema %}
  {
    "name": "Image Block Accordion",
    "settings": [],
    "blocks": [
      {
        "type": "section",
        "name": "Block Accordion",
        "settings": [
          {
          "type": "color",
          "id": "color",
          "label": "Title Color",
          "default": "#1A82C4"
          },
          {
            "type": "text",
            "label": "Block Title",
            "id": "title",
            "default": "Title here"
          },
          {
            "type": "richtext",
            "label": "Block Description",
            "id": "description",
            "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
          },
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "image_url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Block Accordion",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}      
      
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const detailsItems = document.querySelectorAll('.custom-details-item');
        const imageElement = document.getElementById('dynamic-image');
        let currentImage = imageElement.src;
        imageElement.style.opacity = 1;
        detailsItems.forEach(item => {
          item.addEventListener('mouseenter', () => {
            const newImage = item.getAttribute('data-image');
            if (newImage) {
              imageElement.style.opacity = 0;
              setTimeout(() => {
                imageElement.src = newImage;
                imageElement.style.opacity = 1;
              }, 300);
            }
          });
          item.addEventListener('mouseleave', () => {
            const lastHoveredImage = item.getAttribute('data-image');
            if (lastHoveredImage) {
              currentImage = lastHoveredImage;
            }
          });
        });

        document.querySelector('.custom-container').addEventListener('mouseleave', () => {
          imageElement.style.opacity = 0;
          setTimeout(() => {
            imageElement.src = currentImage;
            imageElement.style.opacity = 1;
          }, 300);
        });
      });
      </script>
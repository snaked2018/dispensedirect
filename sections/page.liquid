<div class="section-margin {% if section.settings.disable_top_spacing %}section-no-top-margin{% endif %} {% if section.settings.disable_bottom_spacing %}section-no-bottom-margin{% endif %}">
	<div class="row">
		<div class="small-12 columns">
			<div class="blog-post-wrapper">
				{%- if section.settings.show_page_title -%}
					<div class="thb-page-title standard-page-title">
		  			<h1 class="thb-shop-title">{{ section.settings.page.title }}</h1>
					</div>
				{%- endif -%}
				{%- if section.settings.page.content != blank -%}
					<div class="rte">
						{{ section.settings.page.content }}
					</div>
		    {%- else -%}
		      <div class="page-placeholder-wrapper placeholder">
		        {{ 'page' | placeholder_svg_tag: 'page-placeholder' }}
		      </div>
		    {%- endif -%}
			</div>
		</div>
	</div>
</div>
{% schema %}
  {
    "name": "Page",
    "settings": [
			{
	      "type": "page",
	      "id": "page",
	      "label": "Page",
				"info": "Contact pages will not display a contact form."
	    },
			{
				"type": "checkbox",
				"id": "show_page_title",
				"default": true,
				"label": "Show page title"
			},
			{
        "type": "header",
        "content": "Spacing"
      },
			{
				"type": "checkbox",
				"id": "disable_top_spacing",
				"default": false,
				"label": "Remove top spacing"
			},
			{
				"type": "checkbox",
				"id": "disable_bottom_spacing",
				"default": false,
				"label": "Remove bottom spacing"
			}
    ],
    "presets": [
      {
        "name": "Page"
      }
    ]
  }
{% endschema %}

<modal-dialog id="Search-Drawer" class="search-modal">
	<div
		role="dialog"
		aria-modal="true"
		class="search-modal__content"
		tabindex="-1"
	>
		<button
			id="ModalClose-search"
			type="button"
			class="search-modal__toggle"
			aria-label="{{ 'general.close' | t }}"
		>
			{% render 'svg-icons' with 'thb-close' %}
		</button>
		<div class="thb-close-text">{{ 'search.esc' | t }}</div>
		<div class="row">
			<div class="small-12">
				<div class="searchpopup-inner">
					<form role="search" method="get" class="searchform" action="{{ routes.search_url }}">
						<fieldset>
							<input type="search" class="search-field" placeholder="{{ 'search.placeholder' | t | escape }}" value="{{ search.terms | replace: '*', '' }}" name="q" autocomplete="off">
							<input type="hidden" name="options[prefix]" value="last">
							<button type="submit" value="Search" id="search-results-submit">{{ 'search.submit' | t }}</button>
						</fieldset>
					</form>
					{% if settings.header_search_suggestions %}
					<div class="thb-autocomplete-wrapper"></div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</modal-dialog>
{{ 'predictive-search.min.js' | asset_url | script_tag }}

<shipping-estimator class="shipping-estimator" role="form" data-form-id="{{ section.id }}">
  <div class="shipping-estimator--inner">
    <div class="field">
      <label for="shipping-estimator-country-{{ section.id }}">{{ 'cart.shipping_estimator.country' | t }}</label>
      <div class="select">
      <select class="shipping-estimator-country" data-address-country-select name="shipping-estimator[country]" id="shipping-estimator-country-{{ section.id }}" aria-owns="shipping-estimator-province-wrapper" {% if customer and customer.default_address %}data-default="{{ customer.default_address.country }}"{% else %}data-default="{{ shipping_estimator.settings.default_country }}"{% endif %}>{{ country_option_tags }}</select>
      </div>
    </div>
    <div id="shipping-estimator-province-wrapper-{{ section.id }}" class="field" style="display: none">
      <label for="shipping-estimator-province-{{ section.id }}">{{ 'cart.shipping_estimator.province' | t }}</label>
      <div class="select">
      <select class="shipping-estimator-province" name="shipping-estimator[province]" id="shipping-estimator-province-{{ section.id }}" {% if customer and customer.default_address %}data-default="{{ customer.default_address.province }}"{% endif %}></select>
      </div>
    </div>
    <div class="field">
      <label for="shipping-estimator-zip-{{ section.id }}">{{ 'cart.shipping_estimator.zip_code' | t }}</label>
      <input type="text" class="shipping-estimator-zip" name="shipping-estimator[zip]" id="shipping-estimator-zip-{{ section.id }}">
    </div>
    {% unless in_product %}
    <button type="button" class="button"><span>{{ 'cart.shipping_estimator.submit' | t }}</span>
    <span class="loading-overlay">
      {% render 'svg-icons' with 'thb-loading' %}
    </span></button>
    {% endunless %}
  </div>
  {% if in_product %}
    <button type="button" class="button"><span>{{ 'cart.shipping_estimator.submit' | t }}</span>
    <span class="loading-overlay">
      {% render 'svg-icons' with 'thb-loading' %}
    </span></button>
  {% endif %}
  <div class="shipping-estimator--results"></div>
</shipping-estimator>
{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
<script src="{{ 'shipping-estimator.min.js' | asset_url }}" defer="defer"></script>
<link rel="stylesheet" href="{{ 'shipping-estimator.css' | asset_url }}" media="print" onload="this.media='all'">